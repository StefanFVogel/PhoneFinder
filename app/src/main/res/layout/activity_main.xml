<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Help Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_help"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Hilfe" />
        </LinearLayout>

        <!-- ==================== -->
        <!-- 1. STATUS & KONFIGURATION -->
        <!-- ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status &amp; Konfiguration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- GPS Status - clickable -->
                <LinearLayout
                    android:id="@+id/row_gps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/indicator_gps"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS Berechtigung"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:alpha="0.5" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <!-- Drive Status - clickable -->
                <LinearLayout
                    android:id="@+id/row_drive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/indicator_drive"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:id="@+id/text_drive_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Google Drive"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:alpha="0.5" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <!-- Telegram Status - clickable -->
                <LinearLayout
                    android:id="@+id/row_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/indicator_telegram"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:id="@+id/text_telegram_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Telegram Bot"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:alpha="0.5" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <!-- SMS Status - clickable -->
                <LinearLayout
                    android:id="@+id/row_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/indicator_sms"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:id="@+id/text_sms_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notfall-SMS"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:alpha="0.5" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <!-- Battery Optimization - clickable -->
                <LinearLayout
                    android:id="@+id/row_battery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/indicator_battery"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:id="@+id/text_battery_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Akku-Optimierung"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:alpha="0.5" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== -->
        <!-- 2. PING STATUS -->
        <!-- ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/indicator_ping"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_yellow" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ping Ãœberwachung"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_tracking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrÃ¼ft regelmÃ¤ÃŸig Berechtigungen und sendet Ping"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <!-- Ping Interval Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intervall:"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_ping_interval"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_last_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letzter Ping: -"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== -->
        <!-- 3. LAST BREATH SCHWELLE -->
        <!-- ==================== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/indicatorLastBreath"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Breath Schwellen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WÃ¤hle mindestens 2 Schwellen fÃ¼r optimalen Schutz"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15%"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/checkbox8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8%"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4%"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2%" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== -->
        <!-- 4. AKTIONEN -->
        <!-- ==================== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_test_last_breath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Last Breath testen"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>
</ScrollView>
