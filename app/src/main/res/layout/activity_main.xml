<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Help Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_help"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Hilfe" />
        </LinearLayout>

        <!-- Status Dashboard -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- GPS Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/indicator_gps"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS Berechtigung"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Drive Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/indicator_drive"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google Drive"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Telegram Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/indicator_telegram"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/indicator_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telegram Bot"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tracking Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tracking aktiv"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_tracking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_last_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noch nicht synchronisiert"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Distance Slider -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erfassungsabstand"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/seekbar_distance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="39"
                        android:progress="5" />

                    <TextView
                        android:id="@+id/text_distance"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="300m"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Setup Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_drive_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mit Google Drive verbinden"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sync_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jetzt zu Drive synchronisieren"
            style="@style/Widget.Material3.Button"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_telegram_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram Bot einrichten"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sms_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notfall-SMS einrichten"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="16dp" />

        <!-- Last Breath Threshold -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Breath Schwelle"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bei älteren Akkus höher setzen"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/seekbar_last_breath"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:min="1"
                        android:max="20"
                        android:progress="5" />

                    <TextView
                        android:id="@+id/text_last_breath_threshold"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="5%"
                        android:gravity="end"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_battery_optimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akku-Optimierung deaktivieren"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_test_last_breath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Breath testen"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
